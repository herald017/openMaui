<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OpenMaui"
             x:Class="OpenMaui.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="NavBarDark">#2f2f2f</Color>
            <Color x:Key="StatusBarLight">#e8e8e8</Color>
            <Color x:Key="StatusBarDark">#464646</Color>
            <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
                <Setter Property="Padding" Value="-5"/>
            </Style>
            <Style x:Key="NavBarStyle" TargetType="Border">
                <Setter Property="HeightRequest" Value="70"/>
                <Setter Property="BackgroundColor" Value="{StaticResource NavBarDark}"/>
            </Style>
                        
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            
            
        </ResourceDictionary>

    </Application.Resources>
</Application>
